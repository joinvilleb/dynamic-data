<h1>Basic Form</h1>


{{#if req.query.fieldColor}}
  <p>Your favorite color is: {{req.query.fieldColor}}</p>
{{/if}}

{{#if req.query.hush}}
  <p>Secret message: {{req.query.hush}}</p>
{{/if}}


<form action"/" method="GET">
  <input type="hidden" name="hush" value="hidden but not secret">

  <div>
    <label for="fieldColor">Your favorite color:</label>


    <input type="text" id="fieldColor" name="fieldColor">

    <div>
        <button type="submit">Go Mad</button>
    </div>

  </div>